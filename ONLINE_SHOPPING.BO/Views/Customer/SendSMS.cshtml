@{
    ViewBag.Title = "Gửi tin nhắn cho khách hàng";
}

<hr />

<form autocomplete="off" method="post" action="/Customer/SendSMS" id="smsform">
    <div class="form-group">
        <label for="usr">Gửi đến SĐT:</label>
        <input type="text" class="form-control" id="usr" name="phone">
    </div>
    
    <div class="form-group">
        <label for="Message">Message:</label>
        <textarea class="form-control" id="comment" name="message"></textarea>
    </div>

    <input type="submit" class="btn btn-default"  value="Gửi"/>
</form>