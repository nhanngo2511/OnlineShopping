@model List<ONLINE_SHOPPING.ENTITIES.Product>
@using ONLINE_SHOPPING.FO.Helpers

@{
    string localhost = System.Web.Configuration.WebConfigurationManager.AppSettings["LocalhostOnlineShopping.BO"];
}

<div class="row">
    <div class="col-lg-12">
        <h4 class="text-info" style="border-bottom: 1px solid #c8c8c8;"><b> THỰC PHẨM KHÔ: </b></h4>
    </div>
</div>
<div class="row text-center">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-xs-3 my-block">
            <div class="thumbnail">
                <a href="@Url.Action("ProductDetails", "ViewSite", new { ID = Model[i].ID })" class="nounderline">

                    <img src="@localhost/Images/@Model[i].DefaultImage" style=" width: 200px; height: 150px" />
                    <div class="caption">
                        <h4>@Model[i].Name</h4>
                        @*<p style="text-transform: uppercase; color:#337ab7">@Html.FormatMoney(Model[i].Price)</p>*@
                    </div>

                </a>

            </div>
        </div>
    }
    <div style="clear:both; "></div>
    <p>
        <a class="pull-right" style="margin-right:20px;" href="@Url.Action("ProductDetailss", "ViewSite", new { CategoryID = Model[0].Category.ID })">>> Xem thêm thực phẩm khô</a>
    </p>
</div>